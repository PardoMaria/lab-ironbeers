<div class="container oneBeer">
  <div class="col-3">
    <div class="center-image">
      <img src={{this.image_url}} class="images" alt="beer image">
    </div>
  </div>
  <div class="col-6">
    <h5>{{this.name}}</h5>
    <h6>{{this.tagline}}</h6>
    <p class="card-text">{{this.description}}</p>
    <h5>Food pairing</h5>
    <ul>
      {{#if this.food_pairing}}
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
      {{else}}
      <p><i> no food pairing</i></p>
      {{/if}}
    </ul>
    <p><b>Brewers tip: </b>{{this.brewers_tips}}</p>
  </div>
</div>